<%- include('../../partials/doctype.ejs') %>

<head>
    <%- include('../../partials/header') %>
    <title><%= page.display %> - <%= app.name %></title>
    <%- include('../../partials/theme_css') %>
    <style>
        .card-r {
            border-radius: 10px;
            background: #fff;
            box-shadow: 0 6px 10px rgba(0, 0, 0, .08), 0 0 6px rgba(0, 0, 0, .05);
            transition: .3s transform cubic-bezier(.155, 1.105, .295, 1.12), .3s box-shadow, .3s -webkit-transform cubic-bezier(.155, 1.105, .295, 1.12);
            padding: 25px;
            cursor: pointer;
        }

        .card-r:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, .12), 0 4px 8px rgba(0, 0, 0, .06);
        }
    </style>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <% if(page.name != 'login' && page.name != '404') { %>
            <%- include('../../partials/sidebar') %>
            <% } %>
            <!-- / Menu -->

            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->
                <% if(page.name != 'login' && page.name != '404') { %>
                <%- include('../../partials/navbar') %>
                <% } %>
                <!-- / Navbar -->

                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="card mb-4">
                            <div class="card-body demo-only-element">
                                <div class="row col-12">
                                    <div class="col-12 col-md-10 mt-md-0 mt-1 d-grid">
                                        <h4 class="fw-bold py-1 mb-0">
                                            Raporlar
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-lg-4 mb-4">
                                <a href="/reports/vergi-raporu">
                                    <div class="card-r card-border-shadow-primary grow-on-hover">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2 pb-1">
                                                <div class="avatar me-2">
                                                    <span class="avatar-initial rounded bg-label-primary">
                                                        <i class="fa-solid fa-table"></i>
                                                    </span>
                                                </div>
                                                <h4 class="ms-1 mb-0">Vergi Raporu</h4>
                                            </div>
                                            <p class="mb-1 text-black">Aylık olarak faturalar üzerindeki vergi tutarlarının bulunduğu rapor</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <!-- / Content -->

                        <!-- Footer -->
                        <%- include('../../partials/footer') %>
                        <!-- / Footer -->

                        <div class="content-backdrop fade"></div>
                    </div>
                    <!-- Content wrapper -->
                </div>
                <!-- / Layout page -->
            </div>
            <!-- Overlay -->
            <div class="layout-overlay layout-menu-toggle"></div>
            <!-- Drag Target Area To SlideIn Menu On Small Screens -->
            <div class="drag-target"></div>
        </div>
        <%- include('../../partials/theme_js') %>
</body>

</html>